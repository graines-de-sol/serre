= render :partial => '/admin/shared/left_column'

.col-md-9.content
  .row
    .col-md-12
      %h3= t('default_avatar')
      %hr
      .well
        .col-md-2
          = image_tag $conf.default_avatar.thumb('101x101').url, :alt => t('default_avatar')
        .col-md-8.pt-20
          = form_tag '/admin/conf', :multipart => true, :class => 'form form-horizontal' do
            = file_field_tag "conf[default_avatar]", :class => 'pull-left'
            = submit_tag t('save'), :class=>'btn btn-warning pull-left'
        .clearfix

  .row
    .col-md-12
      %h3= t('conf.max_post_on_index')
      %hr
      .well
        = form_tag '/admin/conf', :class => 'form form-horizontal' do
          .row
            .col-md-1
              = text_field_tag "conf[max_post_on_index]", $conf.max_post_on_index, :class => 'form-control'
            .col-md-11
              = submit_tag t('save'), :class=>'btn btn-warning'
        .clearfix

  .row
    .col-md-12
      %h3= t('conf.app_name')
      %hr
      .well
        = form_tag '/admin/conf', :class => 'form form-horizontal' do
          .row
            .col-md-6
              = text_field_tag "conf[app_name]", $conf.app_name, :class => 'form-control'
            .col-md-6
              = submit_tag t('save'), :class=>'btn  btn-warning'
        .clearfix

  .row
    .col-md-12
      %h3= t('conf.app_url')
      %hr
      .well
        = form_tag '/admin/conf', :class => 'form form-horizontal' do
          .row
            .col-md-6
              = text_field_tag "conf[app_url]", $conf.app_url, :class => 'form-control'
            .col-md-6
              = submit_tag t('save'), :class=>'btn btn-warning'
        .clearfix

  .row
    .col-md-12
      %h3= t('default_newsletter_banner')
      %hr
      .well
        .row
          .col-md-12
            = (image_tag $conf.newsletter_header.url) if $conf.newsletter_header
        %hr
        .row
          .col-md-8.pt-20
            = form_tag '/admin/conf', :multipart => true, :class => 'form form-horizontal' do
              = file_field_tag "conf[newsletter_header]", :class => 'pull-left'
              = submit_tag t('send'), :class=>'btn btn-warning pull-left'
        .clearfix

  .row
    .col-md-12
      %h3= t('welcome_mail')
      %hr
      .well
        = form_tag '/admin/conf', :class => 'form' do
          %label= t('welcome_mail_subject')
          = text_field_tag "conf[welcome_mail_subject]", $conf.welcome_mail_subject, :class => 'form-control'
          %br
          %label= t('welcome_mail_body')
          .content_container.hide
            = soft_clean $conf.welcome_mail_body
          .textarea_container
          %br
          = submit_tag t(:create), :class=>'btn btn-warning pull-right'
        .clearfix

  .row
    .col-md-12
      %h3= "Calendrier"
      %hr
      .well
        = form_tag '/admin/conf', :class => 'form' do
          %label= t('calendar.name')
          = text_field_tag 'calendar[name]', Calendar.find(1).name, :class => 'form-control'
          %br
          %label= t('calendar.mail_to')
          = text_field_tag 'calendar[email]', Calendar.find(1).email, :class => 'form-control'
          %br
          %label= t('calendar.rss')
          = text_field_tag 'calendar[rss]', Calendar.find(1).rss, :class => 'form-control'
          %br
          %label= t('calendar.description')
          = text_area_tag 'calendar[description]', Calendar.find(1).description, :class => 'form-control', :rows => 10
          %br
          = submit_tag t('update'), :class=>'btn btn-warning right'

= t_init(:name => 'conf[welcome_mail_body]', :width => '100%')

